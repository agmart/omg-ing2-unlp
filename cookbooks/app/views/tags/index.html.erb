<div class="row">
  <div class="small-6 small-centered columns">
    <h1>Listado de categorias</h1>

    <table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Detalles</th>
          <th>Editar</th>
          <th>Mostrar</th>
        </tr>
      </thead>

      <tbody>
      <% @tags.each do |tag| %>
        <tr>
        <td><%= tag.nombre %></td>
        <td><%= link_to 'Mostrar', tag %></td>
        <td><%= link_to 'Editar', edit_tag_path(tag) %></td>
        <td><%= link_to 'Borrar', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
      </tbody>
    </table>

    <br>

