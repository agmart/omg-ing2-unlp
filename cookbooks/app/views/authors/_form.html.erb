<%= form_for(@author) do |f| %>
  <% if @author.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@author.errors.count, "error") %> no permitieron que este autor se guardara:</h2>

      <ul>
        <% @author.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="large-12 column">
      <div class="field">
        <%= f.label :nombre %>
        <%= f.text_field :nombre %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="large-4 column">
      <div class="actions">
        <%= f.submit 'Guardar', class: 'button small alert' %>
      </div>
    </div>
<% end %>
