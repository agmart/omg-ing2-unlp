<div class="row">
  <div class="small-6 small-centered columns">
    <h2>Dar de alta un nuevo admin</h2>

    <%= form_for(@admin, url: nuevo_admin_path) do |f| %>
      <% if @admin.errors.any? %>
        <div id="error_explanation">
          <% if @admin.errors.count > 0 %>
            <h2>Los siguientes errores prohibieron que se guardara este admin:</h2>
            <ul>
              <% @admin.errors.each do |attr, msg| %>
                <% if @admin.errors[attr].first == msg %>
                  <li><%= "#{attr} #{msg}"%></li>
                <% end %> 
              <% end %> 
            </ul>
          <% end %>
        </div>
      <% end %>
      <div><%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: 'email@ejemplo.com'%>
      </div>

      <div class="field">
        <%= f.label :nombre %><br>
        <%= f.text_field :nombre %>
      </div>
      <div class="field">
        <%= f.label :dni %><br>
        <%= f.number_field :dni %>
      </div>

      <div class="field">
        <%= f.label :dirección %><br>
        <%= f.text_field :direccion %>
      </div>

      <div class="field">
        <%= f.label :teléfono %><br>
        <%= f.text_field :tel %>

        <sup><i>(Código de área + N° Ej: 01142122345)</i></sup>

      </div>
      <%= f.hidden_field :es_admin, value: "true" %>
      <div class="field">
        <%= f.label "Fecha de nacimiento" %><br>
        <%= f.date_select :fecha_nac, start_year: 1900, end_year: 1996 %>
      </div>

      <div><%= f.label :contraseña %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div><%= f.label "Confirmar contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div><%= f.submit "Registrarse", class: 'button tiny float left' %></div>
      <div><%= link_to 'Cancelar', root_path, class: 'button tiny float right' %></div>
    <% end %>
  </div>
</div>
